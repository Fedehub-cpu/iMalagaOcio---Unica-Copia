<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoblanco"
    tools:context=".Menu">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="415dp"
        android:layout_height="74dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="#00E5A5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerInParent="true"
            android:contentDescription="Bienvenido a iMalagaOcio!"
            android:text="Bienvenido a iMalagaOcio!"
            android:textColor="#0E0707"
            android:textSize="24sp"
            tools:text="Bienvenido a iMalagaOcio!" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="80dp"
        android:text="Hola, Pepe "
        android:textAlignment="textStart"
        android:textColor="#00E5A5"
        android:textSize="34sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.241"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="80dp"
        android:contentDescription="¿Dónde quieres ir?"
        android:fontFamily="sans-serif"
        android:text="¿Dónde quieres ir?"
        android:textAlignment="textStart"
        android:textColor="#00E5A5"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre"
        app:layout_wrapBehaviorInParent="skipped" />

    <ImageButton
        android:id="@+id/btnPubs"
        android:layout_width="102dp"
        android:layout_height="88dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Pubs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/pubs" />

    <ImageButton
        android:id="@+id/btnRestaurantes"
        android:layout_width="102dp"
        android:layout_height="88dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Restaurantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/restarnt" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="139dp"
        android:layout_height="18dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="48dp"
        android:contentDescription="Sitios Turísticos"
        android:text="Sitios Turísticos"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPubs" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="85dp"
        android:layout_height="20dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="28dp"
        android:contentDescription="Discotecas"
        android:text="Discotecas"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRestaurantes" />

    <ImageButton
        android:id="@+id/btnTurismo"
        android:layout_width="102dp"
        android:layout_height="88dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Sitios Turísticos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnDiscotecas"
        app:layout_constraintTop_toBottomOf="@+id/btnPubs"
        app:srcCompat="@drawable/turismo" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="85dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="76dp"
        android:contentDescription="Pubs"
        android:text="Pubs"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/btnDiscotecas"
        android:layout_width="102dp"
        android:layout_height="88dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="52dp"
        android:background="#00FFFFFF"
        android:contentDescription="Discotecas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRestaurantes"
        app:srcCompat="@drawable/discoteca" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="91dp"
        android:contentDescription="Restaurantes"
        android:text="Restaurantes"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btnCancelar"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/white"
        android:text="Cancelar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDiscotecas"
        app:strokeColor="#00E5A5" />

    <Button
        android:id="@+id/btnFavs"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="@color/white"
        android:text="Favoritos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTurismo"
        app:strokeColor="#00E5A5" />

</androidx.constraintlayout.widget.ConstraintLayout>